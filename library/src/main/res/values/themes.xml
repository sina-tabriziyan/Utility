<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewLabelStyle">
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextViewLabelStyle.Item">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="CustomCheckboxBrand" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.TopRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeTopRight">22dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- styles.xml -->
    <style name="CustomBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>
    <declare-styleable name="OtpEditText">
        <attr name="digits" format="integer"/>
        <attr name="boxSize" format="dimension"/>
        <attr name="boxSpacing" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="activeStrokeColor" format="color"/>
        <attr name="inactiveStrokeColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="WaveProgressBar">
        <attr name="progress" format="float" />
        <attr name="waveStartColor" format="color" />
        <attr name="waveMiddleColor" format="color" />
        <attr name="waveEndColor" format="color" />
        <attr name="glassOutlineColor" format="color" />
        <attr name="glassReflectionColorStrong" format="color" />
        <attr name="glassReflectionColorWeak" format="color" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>
</resources>