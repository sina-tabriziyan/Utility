<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularCheckbox">
        <attr name="isChecked" format="boolean" />
        <attr name="circleColor" format="color" />
        <attr name="checkmarkColor" format="color" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="FontIcon">
        <attr name="setIcon" format="string"/>
        <attr name="tint" format="color"/>
        <attr name="backgroundShape">
            <enum name="oval" value="0"/>
            <enum name="rectangle" value="1"/>
            <enum name="rounded" value="2"/>
        </attr>
        <attr name="backgroundColor" format="color"/>
        <attr name="ripple" format="boolean"/>
        <attr name="text" format="string"/>
        <attr name="textPosition">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
            <enum name="start" value="2"/>
            <enum name="end" value="3"/>
        </attr>
<!--        <attr name="strokeColor" format="color" />-->
<!--        <attr name="strokeWidth" format="integer" />-->

    </declare-styleable>

    <declare-styleable name="OtpEditText">
        <attr name="digits" format="integer"/>
        <attr name="boxSize" format="dimension"/>
        <attr name="boxSpacing" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="activeStrokeColor" format="color"/>
        <attr name="inactiveStrokeColor" format="color"/>
        <attr name="otpTextSize" format="dimension"/>
        <attr name="otpTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="WaveProgressBar">
        <attr name="progress" format="float" />
        <attr name="waveStartColor" format="color" />
        <attr name="waveMiddleColor" format="color" />
        <attr name="waveEndColor" format="color" />
        <attr name="glassOutlineColor" format="color" />
        <attr name="glassReflectionColorStrong" format="color" />
        <attr name="glassReflectionColorWeak" format="color" />
        <attr name="waveTextColor" format="color" />
        <attr name="waveTextSize" format="dimension" />
    </declare-styleable>

</resources>