<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 4: Outermost Circle (Light Black) -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="#33000000" /> <!-- Light Black (20% opacity) -->
            <corners android:radius="50dp" />
            <size android:width="50dp" android:height="50dp" />
        </shape>
    </item>

    <!-- Layer 3: Second Circle (Medium Light Black) -->
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape>
            <solid android:color="#66000000" /> <!-- Medium Light Black (40% opacity) -->
            <corners android:radius="50dp" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>

    <!-- Layer 2: Third Circle (Dark Black) -->
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape>
            <solid android:color="#99000000" /> <!-- Dark Black (60% opacity) -->
            <corners android:radius="50dp" />
            <size android:width="30dp" android:height="30dp" />
        </shape>
    </item>

    <!-- Layer 1: Center Circle (Full Black) -->
    <item android:left="15dp" android:right="15dp" android:top="15dp" android:bottom="15dp">
        <shape>
            <solid android:color="#FF000000" /> <!-- Full Black (100% opacity) -->
            <corners android:radius="50dp" />
            <size android:width="20dp" android:height="20dp" />
        </shape>
    </item>
</layer-list>
