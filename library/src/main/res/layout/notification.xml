<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/TextAppearance.StatusBar.EventContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp">

        <ImageView
            android:id="@+id/ic_module"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="7dp"
            android:textSize="100sp" />

        <ImageView
            android:id="@+id/border_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:textSize="100sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="28dp">

            <TextView
                android:id="@+id/txt_notify_red_counter"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/notify_border_length_red"
                android:minWidth="25dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_notify_orange_counter"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/notify_border_length_orange"
                android:minWidth="22dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_very_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_notify_yellow_counter"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/notify_border_length_yellow"
                android:minWidth="22dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_very_small"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lay_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/ic_module"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/title_notify"
                android:textSize="14sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/tid_notify"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textColor="@color/tid_notify"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/tid_notify"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>